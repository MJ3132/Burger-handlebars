<div class="container">
    <div class="row" id="hide">
        <div class="col-xs-12 text center" id="top-bar">
            <h1>Eat Da Burger!</h1>
        </div>
        <div class="col-xs-6 text-center" class="task">
            <div class="row">
                {{#each burgers}} {{#unless this.devoured}}

                <div class="col-xs-9 text center">
                    <pre>{{this.id}}. {{this.burger_name}}</pre>
                </div>
            </div>
        </div>
        <div class="col-xs-3 text-center burger" id={{this.id}} data-id={{this.id}}>
            {{!--
            <form class="button-size"> --}} {{!--
                <div data-id={{this.id}}> {{this.burger_name}} </div> --}}
                <br>
                <button class="btn btn-default">Devour It!</button>
                {{!-- </form> --}}
                 {{/unless}} {{/each}}
        </div>

    </div>
    <div class="row">
        <div class="col-md-6">
            {{#each burgers}} {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}"  >
            {{/if}} {{/each}}
        </div>

    </div>

</div>
<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
            <form action="/api/burgers/create" method="POST">
                <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>

            </form>
            <p>Enter In The Burger You would Like to Eat!</p>
        </div>
    </div>
</div>